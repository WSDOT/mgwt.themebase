<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
  <ui:with field="apperance" type="com.googlecode.mgwt.ui.client.widget.tabbar.TabBarAppearance" />

  <ui:style>
      .selectionBar {
        height: 2px;
        background-color: #ff0000;
      }
  </ui:style>
  
  <div ui:field="button" class="{apperance.css.button}">
    <div ui:field="icon" class="{apperance.css.icon}"/>
    <div ui:field="text" class="{apperance.css.text}"/>
    <div ui:field="selectionBar" styleName="{style.selectionBar}"></div>
  </div>
</ui:UiBinder>